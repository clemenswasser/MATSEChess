<Window x:Class="MATSEChessGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MATSEChessGUI"
        mc:Ignorable="d"
        Title="MATSE Chess" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0" Name="boardImage" MouseDown="OnBoardMouseDown" Loaded="OnLoaded" SizeChanged="OnSizeChanged"/>
        <TextBlock Grid.Column="1" Name="currentPlayerText" TextWrapping="Wrap" Text="Current Player: Black" HorizontalAlignment="Center" FontSize="20"/>
        <Button x:Name="button" Grid.Column="1" Content="Reset" HorizontalAlignment="Center" Margin="0,48,0,0" VerticalAlignment="Top" Height="43" Width="181" FontSize="24" Click="OnResetClicked"/>
    </Grid>
</Window>

